<%- include('partials/head', { pageTitle: 'Reset Password', styles: ['login.css'] }) %>
<%- include('partials/header', { pageTitle: 'Set Password', showNav: false }) %>

<main class="container">
  <div class="card" style="max-width:420px;margin:auto">

    <h3 style="text-align:center;margin-bottom:16px">
      Create your password
    </h3>

    <input
      type="password"
      id="password"
      placeholder="New password"
      autocomplete="new-password"
    >

    <input
      type="password"
      id="confirm"
      placeholder="Confirm password"
      autocomplete="new-password"
    >

    <button
      class="btn btn-primary"
      style="width:100%"
      onclick="resetPassword()"
    >
      Set Password
    </button>

  </div>
</main>

<%- include('partials/footer', { scripts: ['/ui.js', 'reset-password.js'], includeNavScript: false }) %>

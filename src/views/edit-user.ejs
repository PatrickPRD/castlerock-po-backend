<%- include('partials/head', { pageTitle: 'Edit User', styles: ['admin.css'] }) %>
<%- include('partials/header', { pageTitle: 'Edit User' }) %>

<main class="container">
  <div class="card form-card">
    <h3>Edit User</h3>

    <form id="userForm">
      <div class="form-row">
        <input id="firstName" placeholder="First name" required>
        <input id="lastName" placeholder="Last name" required>
      </div>

      <div class="form-row">
        <input id="email" placeholder="Email" type="email" required disabled>
      </div>

      <div class="form-row">
        <select id="role" required>
          <option value="">Select role...</option>
          <option value="super_admin">Super Admin</option>
          <option value="admin">Admin</option>
          <option value="staff">Staff</option>
          <option value="viewer">Viewer</option>
        </select>
      </div>

      <div class="form-row">
        <select id="active" required>
          <option value="1">Active</option>
          <option value="0">Disabled</option>
        </select>
      </div>

      <div class="form-row">
        <input id="password" placeholder="New password (leave blank to keep current)" type="password">
      </div>

      <div class="form-actions">
        <button class="btn btn-outline-secondary" type="button" onclick="cancel()">Cancel</button>
        <button class="btn btn-primary" type="submit">Save Changes</button>
      </div>
    </form>
  </div>
</main>

<%- include('partials/footer', { scripts: ['/ui.js', 'edit-user.js'], includeNavScript: true }) %>

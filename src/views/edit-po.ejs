<%- include('partials/head', { title: 'Edit Purchase Order | Castlerock Homes', styles: ['edit-po.css'] }) %>
<%- include('partials/header', { pageTitle: 'Edit Purchase Order' }) %>

<main class="container">
  <div class="card">
    <form id="poForm">

      <label>PO Number</label>
      <input type="text" id="poNumber" disabled>

      <label>Supplier</label>
      <select id="supplier"></select>

      <label>Site</label>
      <select id="site"></select>

      <label>Location</label>
      <select id="location"></select>
      
      <label>Stage</label>
      <select id="stage"></select>

      <label>PO Date</label>
      <input type="date" id="poDate" required>

      <label>Description</label>
      <textarea id="description"></textarea>

      <label>Net Amount (€)</label>
      <input
        type="number"
        id="netAmount"
        placeholder="Net Value"
        step="0.01"
        min="0"
        inputmode="decimal"
      />

      <label>VAT Rate</label>
      <select id="vatRate">
        <option value="0">0%</option>
        <option value="13.5">13.5%</option>
        <option value="23">23%</option>
      </select>

      <p><strong>VAT:</strong> €<span id="vatAmount">0.00</span></p>
      <p><strong>Total:</strong> €<span id="totalAmount">0.00</span></p>

      <button id="saveBtn" class="btn btn-primary">Save Changes</button>

    </form>
  </div>
</main>

<%- include('partials/footer', { scripts: ['/ui.js', 'edit-po.js'], includeNavScript: true }) %>

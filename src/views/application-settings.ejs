<%- include('partials/head', { pageTitle: 'Application Settings', styles: ['admin.css', 'application-settings.css'] }) %>
<%- include('partials/header', { pageTitle: 'Application Settings' }) %>

<main class="container py-4">
  <div class="card p-4 mb-4">
    <h3 class="mb-3">Branding</h3>
    <p class="text-muted mb-4">Set the site-wide header background color and brand display for the top navbar.</p>

    <form id="brandingForm" class="d-grid gap-3">
      <div>
        <label for="headerColor" class="form-label">Header Background Color</label>
        <div class="d-flex align-items-center gap-3">
          <input id="headerColor" type="color" class="form-control form-control-color" value="#212529" />
          <input id="headerColorHex" type="text" class="form-control" value="#212529" maxlength="7" />
        </div>
      </div>

      <div>
        <label for="logoMode" class="form-label">Header Brand Type</label>
        <select id="logoMode" class="form-select">
          <option value="image">Logo Image</option>
          <option value="text">Simple Text</option>
        </select>
      </div>

      <div id="logoImageSection">
        <label for="logoFile" class="form-label">Upload New Logo</label>
        <input id="logoFile" type="file" class="form-control" accept="image/png,image/jpeg,image/jpg,image/webp,image/svg+xml" />
        <small class="text-muted">Accepted formats: PNG, JPG, WEBP, SVG. Max size 2 MB.</small>
      </div>

      <div id="faviconImageSection">
        <label for="faviconFile" class="form-label">Upload New Favicon</label>
        <input id="faviconFile" type="file" class="form-control" accept="image/x-icon,image/png,image/svg+xml" />
        <small class="text-muted">Accepted formats: ICO, PNG, SVG. Recommended size: 32x32px or 64x64px. Max size 500 KB.</small>
      </div>

      <div id="logoTextSection" style="display: none;">
        <label for="logoText" class="form-label">Header Text</label>
        <input id="logoText" type="text" class="form-control" maxlength="80" placeholder="Castlerock Homes" />
      </div>

      <div class="preview-box">
        <div id="brandPreviewBar" class="preview-bar">
          <img id="brandPreviewImage" src="/assets/Logo.png" alt="Logo preview" />
          <span id="brandPreviewText" style="display: none;">Castlerock Homes</span>
        </div>
      </div>

      <div class="d-flex gap-2 mt-2">
        <button type="submit" class="btn btn-primary">Save Branding</button>
        <button type="button" class="btn btn-outline-secondary" id="resetBtn">Reset</button>
      </div>
    </form>
  </div>

  <div class="card p-4">
    <h3 class="mb-3">Company Details</h3>
    <p class="text-muted mb-4">Store company information for invoices, PDFs, and reports.</p>

    <div class="border rounded p-3 mb-4 bg-light">
      <h5 class="mb-2">Current Details</h5>
      <div class="d-grid gap-1">
        <div><strong>Company Name:</strong> <span id="currentCompanyName">-</span></div>
        <div><strong>Trading As:</strong> <span id="currentCompanyTradingName">-</span></div>
        <div><strong>Email:</strong> <span id="currentCompanyEmail">-</span></div>
        <div><strong>Phone:</strong> <span id="currentCompanyPhone">-</span></div>
        <div><strong>Address:</strong> <span id="currentCompanyAddress">-</span></div>
        <div><strong>VAT Number:</strong> <span id="currentCompanyVatNumber">-</span></div>
        <div><strong>CRO Number:</strong> <span id="currentCompanyCroNumber">-</span></div>
      </div>
    </div>

    <form id="companyDetailsForm" class="d-grid gap-3">
      <div>
        <label for="companyName" class="form-label">Company Name</label>
        <input id="companyName" type="text" class="form-control" maxlength="120" placeholder="Castlerock Homes" />
      </div>

      <div>
        <label for="companyTradingName" class="form-label">Trading As</label>
        <input id="companyTradingName" type="text" class="form-control" maxlength="120" placeholder="Castlerock Homes" />
      </div>

      <div>
        <label for="companyEmail" class="form-label">Company Email</label>
        <input id="companyEmail" type="email" class="form-control" maxlength="100" placeholder="info@company.ie" />
      </div>

      <div>
        <label for="companyPhone" class="form-label">Company Phone</label>
        <input id="companyPhone" type="tel" class="form-control" maxlength="30" placeholder="+353 (0)1 XXX XXXX" />
      </div>

      <div>
        <label for="companyAddress" class="form-label">Company Address</label>
        <textarea id="companyAddress" class="form-control" rows="3" placeholder="Street, City, County, Postcode"></textarea>
      </div>

      <div>
        <label for="companyVatNumber" class="form-label">VAT Number</label>
        <input id="companyVatNumber" type="text" class="form-control" maxlength="32" placeholder="IE1234567X" />
      </div>

      <div>
        <label for="companyCroNumber" class="form-label">CRO Number</label>
        <input id="companyCroNumber" type="text" class="form-control" maxlength="32" placeholder="123456" />
      </div>

      <div class="d-flex gap-2 mt-2">
        <button type="submit" class="btn btn-primary">Save Company Details</button>
        <button type="button" class="btn btn-outline-secondary" id="companyResetBtn">Reset</button>
      </div>
    </form>
  </div>

  <div class="card p-4 mt-4">
    <h3 class="mb-3">Financial Settings</h3>
    <p class="text-muted mb-4">Set the default currency and manage VAT options used across POs and invoices.</p>

    <form id="financialForm" class="d-grid gap-3">
      <div>
        <label for="currencyCode" class="form-label">Currency</label>
        <select id="currencyCode" class="form-select">
          <option value="EUR">EUR (€)</option>
          <option value="GBP">GBP (£)</option>
          <option value="USD">USD ($)</option>
        </select>
      </div>

      <div>
        <label class="form-label">Worker Leave Allowances (Days per Year)</label>
        <div class="row g-3">
          <div class="col-12 col-md-4">
            <label for="sickDaysPerYear" class="form-label">Sick Days</label>
            <input id="sickDaysPerYear" type="number" min="0" max="365" step="0.5" class="form-control" placeholder="e.g. 10" />
          </div>
          <div class="col-12 col-md-4">
            <label for="annualLeaveDaysPerYear" class="form-label">Annual Leave</label>
            <input id="annualLeaveDaysPerYear" type="number" min="0" max="365" step="0.5" class="form-control" placeholder="e.g. 20" />
          </div>
          <div class="col-12 col-md-4">
            <label for="bankHolidaysPerYear" class="form-label">Bank Holidays</label>
            <input id="bankHolidaysPerYear" type="number" min="0" max="365" step="0.5" class="form-control" placeholder="e.g. 10" />
          </div>
        </div>
        <small class="text-muted">These values are applied to new worker leave balances.</small>
      </div>

      <div>
        <label for="leaveYearStartDate" class="form-label">Leave Year Start Date</label>
        <input id="leaveYearStartDate" type="date" class="form-control" />
        <small class="text-muted">Used to reset leave allowances each year.</small>
      </div>

      <div>
        <label class="form-label">VAT Rates (%)</label>
        <div class="d-flex gap-2 mb-3">
          <input id="vatInput" type="number" step="0.1" min="0" max="100" class="form-control" placeholder="e.g. 13.5" />
          <button type="button" class="btn btn-outline-primary" id="vatAddBtn">Add</button>
        </div>
        <div id="vatList" class="d-grid gap-2"></div>
        <small class="text-muted">You cannot remove VAT rates currently used by any PO or invoice.</small>
      </div>

      <div class="d-flex gap-2 mt-2">
        <button type="submit" class="btn btn-primary">Save Financial Settings</button>
        <button type="button" class="btn btn-outline-secondary" id="financialResetBtn">Reset</button>
      </div>
    </form>
  </div>
</main>

<%- include('partials/footer', { scripts: ['/ui.js', 'application-settings.js'], includeNavScript: true }) %>

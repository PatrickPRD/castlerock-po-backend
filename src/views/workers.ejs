<%- include('partials/head', { pageTitle: 'Workers', styles: ['admin.css', 'workers.css'] }) %>
<%- include('partials/header', { pageTitle: 'Workers' }) %>

<main class="container">
  <div class="card">
    <div class="workers-header">
      <h3 style="margin: 0;">Workers</h3>
      <div class="workers-actions">
        <label class="checkbox-row" for="showInactiveWorkers">
          <input type="checkbox" id="showInactiveWorkers">
          Show ceased workers
        </label>
        <button class="btn btn-outline-secondary" id="downloadExcelBtn" onclick="downloadWorkerTemplate()" style="display:none;">
          Download Excel
        </button>
        <button class="btn btn-outline-secondary" id="bulkUploadBtnAction" onclick="openBulkUploadModal()" style="display:none;">
          Bulk Upload
        </button>
        <button class="btn btn-primary" onclick="openWorkerModal()">
          + Add Worker
        </button>
      </div>
    </div>

    <table class="po-table workers-table">
      <thead>
        <tr>
          <th class="sortable" data-column="name">Name<span class="sort-indicator"></span></th>
          <th class="sortable" data-column="nickname">Nickname<span class="sort-indicator"></span></th>
          <th class="sortable" data-column="login_no">Login No<span class="sort-indicator"></span></th>
          <th class="sortable" data-column="status">Status<span class="sort-indicator"></span></th>
          <th>Safe Pass Expiry</th>
        </tr>
      </thead>
      <tbody id="workerTable"></tbody>
    </table>
  </div>

  <div id="workerModal" class="modal" style="display:none;">
    <div class="modal-content" style="width: 600px;">
      <h2 id="workerModalTitle">Add Worker</h2>
      <p id="workerEditNotice" class="edit-notice" style="display:none; color: #666; font-size: 0.9rem; margin-bottom: 1rem;">
        Editing existing worker
      </p>

      <div class="form-row workers-form">
        <div>
          <label for="workerFirstName">First name *</label>
          <input id="workerFirstName" placeholder="Enter first name" class="form-control">
        </div>
        <div>
          <label for="workerLastName">Last name *</label>
          <input id="workerLastName" placeholder="Enter last name" class="form-control">
        </div>
        <div>
          <label for="workerNickname">Nickname</label>
          <input id="workerNickname" placeholder="Nickname" class="form-control">
        </div>
        <div>
          <label for="workerEmail">Email address</label>
          <input id="workerEmail" type="email" placeholder="Email address" class="form-control">
        </div>
        <div>
          <label for="workerMobileNumber">Mobile number</label>
          <input id="workerMobileNumber" placeholder="Mobile number" class="form-control">
        </div>
        <div class="full-width">
          <label for="workerAddress">Address</label>
          <textarea id="workerAddress" rows="2" class="form-control" placeholder="Address"></textarea>
        </div>
        <div>
          <label for="workerBankDetails">Bank details</label>
          <input id="workerBankDetails" placeholder="Bank details" class="form-control">
        </div>
        <div>
          <label for="workerEmployeeId">Employee ID</label>
          <input id="workerEmployeeId" placeholder="Employee ID" class="form-control">
        </div>
        <div>
          <label for="workerLoginNo">Login No</label>
          <input id="workerLoginNo" type="number" min="0" step="1" inputmode="numeric" placeholder="Login number" class="form-control">
        </div>
        <div>
          <label for="workerPpsNumber">PPS Number</label>
          <input id="workerPpsNumber" placeholder="PPS Number" class="form-control">
        </div>
        <div>
          <label for="workerWeeklyPay">Weekly take home (<span data-currency-symbol>EUR</span>)</label>
          <input id="workerWeeklyPay" type="number" step="0.01" min="0" inputmode="decimal" placeholder="0.00" class="form-control">
        </div>
        <div>
          <label for="workerWeeklyCost">Weekly cost (<span data-currency-symbol>EUR</span>)</label>
          <input id="workerWeeklyCost" type="number" step="0.01" min="0" inputmode="decimal" placeholder="0.00" class="form-control">
        </div>
        <div>
          <label for="workerSafePassNumber">Safe Pass Number</label>
          <input id="workerSafePassNumber" placeholder="Safe pass number" class="form-control">
        </div>
        <div>
          <label for="workerSafePassExpiry">Safe Pass Expiry (DD-MM-YYYY)</label>
          <input id="workerSafePassExpiry" type="date" class="form-control">
        </div>
        <div>
          <label for="workerEmploymentDate">Date of employment (DD-MM-YYYY)</label>
          <input id="workerEmploymentDate" type="date" class="form-control">
        </div>
        <div>
          <label for="workerLeftDate">Date ceased employment (DD-MM-YYYY)</label>
          <input id="workerLeftDate" type="date" class="form-control">
        </div>
        <div class="full-width">
          <label for="workerNotes">Notes</label>
          <textarea id="workerNotes" rows="3" class="form-control" placeholder="Notes"></textarea>
        </div>
      </div>

      <div class="form-row" style="display: flex; gap: 0.5rem; justify-content: flex-end; margin-top: 1.5rem;">
        <button class="btn btn-secondary" onclick="closeWorkerModal()">Cancel</button>
        <button class="btn btn-primary" id="saveWorkerBtn" onclick="saveWorker()">Add Worker</button>
      </div>
    </div>
  </div>

  <div id="bulkUploadModal" class="modal" style="display:none;">
    <div class="modal-content" style="width: 560px;">
      <h2>Bulk Upload Workers</h2>
      <p class="text-muted" style="margin-bottom: 1rem;">
        Download the template, fill in your workers, then upload the completed file.
      </p>

      <div class="bulk-upload-actions">
        <button class="btn btn-outline-primary" onclick="downloadWorkerTemplate()">
          Download Excel Template
        </button>
      </div>

      <div class="form-row" style="display: flex; flex-direction: column; gap: 0.5rem;">
        <label for="bulkWorkerFile">Upload completed template</label>
        <input id="bulkWorkerFile" type="file" accept=".xlsx" class="form-control">
      </div>

      <div class="form-row" style="display: flex; gap: 0.5rem; justify-content: flex-end; margin-top: 1.5rem;">
        <button class="btn btn-secondary" onclick="closeBulkUploadModal()">Cancel</button>
        <button class="btn btn-primary" id="bulkUploadBtn" onclick="uploadWorkerFile()">Upload</button>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer', { scripts: ['/ui.js', 'workers.js'], includeNavScript: true }) %>
